@page
@model Torneo.App.Frontend.Pages.Partidos.IndexModel
@{
}
<div class="container-fluid" style="background: #000080;">
  <h1>Lista de Partidos</h1>
</div>

<table class="table table-dark table-sm">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Equipo Local</th>
            <th scope="col">Equipo Visitante</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var partido in Model.partidos)
        {
        <tr>
            <th scope="row">@partido.Id</th>
            <td>@partido.Local.Nombre</td>
            <td>@partido.Visitante.Nombre</td>
            <td>
                <a class="btn btn-outline-light" asp-page="./Details" asp-route-id="@partido.Id">
                Detalle
                </a>
            </td>

        </tr>
        }
    </tbody>
</table>