@page
@model Torneo.App.Frontend.Pages.Dts.IndexModel
@{
}
<a class="btn btn-success" asp-page="./Create">Crear director tecnico</a>
<p></p>
<h1>Lista de Directores Tecnicos</h1>


<table class="table table-success table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var dt in Model.directoresTecnicos)
        {
        <tr>
            <th scope="row">@dt.Id</th>
            <td>@dt.Nombre</td>
            <td>
                <a class="btn btn-success" asp-page="./Details" asp-route-id="@dt.Id">
                Detalle
                </a>
                <a class="btn btn-success" asp-page="./Edit" asp-route-id="@dt.Id">
                Editar
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>
