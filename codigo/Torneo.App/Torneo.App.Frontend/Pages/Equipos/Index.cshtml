@page
@model Torneo.App.Frontend.Pages.Equipos.IndexModel
@{
}

<div class="container-fluid" style="background: #000080;">
  <h1>Lista de Equipos</h1>
</div>


<table class="table table-dark table-sm">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Director Tecnico</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var equipo in Model.equipos)
        {
        <tr>
            <th scope="row">@equipo.Id</th>
            <td>@equipo.Nombre</td>
            <td>@equipo.DirectorTecnico.Nombre</td>
            <td>
                <a class="btn btn-outline-light" asp-page="./Details" asp-route-id="@equipo.Id">
                Detalle
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>